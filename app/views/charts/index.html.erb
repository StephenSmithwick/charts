<div ng-controller="ChartsCtrl">

  <ul class="metric-menu">
    <li ng-model="metric_id"
        ng-class="{selected: isSelected(metric.id)}" 
        ng-repeat="metric in metrics" 
        ng-click="selectMetric(metric.id)">
      {{metric.name}}
    </li>
  </ul>

  <div class="row">
    <div class="col-md-6">

      <bar-chart 
        data="metric_data" 
        selected="selectLhdMetric(args)">
      </bar-chart>

      <div class="panel-info">
        <div class="heading">&nbsp;{{lhd_metric.lhd_name}}</div>
        <div class="body">
        <dl>
          <dt>Value</dt>
            <dd>$ {{lhd_metric.value}} million</dd>
          <dt>Percentage</dt>
            <dd>{{lhd_metric.percentage}} %</dd>
        </dl>
        </div>
      </div>

    </div>

    <div class="col-md-6">
      <map-chart
        data="lhds" 
        selected="selectLhd(args)"
        id="lhd-map">
      </map-chart>
    </div>
  </div>
  
</div>
